    <div class="card-wrapper">
        <div class="card">
            <!-- card left -->
            <div class="product-imgs">
                <div class="img-display">
                    <div class="img-showcase">
                        <img src="<%= book.coverUrl %>" alt="<%= book.title %> cover">
                    </div>
                </div>
            </div>
            <!-- card right -->
            <div class="product-content">
                <h2 class="product-title"><%= book.title %></h2>
                <a href="#" class="product-link">Voir plus de détails</a>
                <div class="product-rating">
                    <!-- Vous pouvez ajouter un système de notation si vous en avez un -->
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span>4.7(21)</span>
                </div>
    
                <div class="product-detail">
                    <h2>À propos de ce livre : </h2>
                    <p><%= book.summary %></p>
                    <ul>
                        <li>Auteur : <span><%= book.author.name %></span></li>
                        <li>Statut : <span><%= book.status ? 'Disponible' : 'Non disponible' %></span></li>
                        <li>Genres : 
                            <span>
                                <% book.genres.forEach((genre, index) => { %>
                                    <%= genre.name %><%= index < book.genres.length - 1 ? ', ' : '' %>
                                <% }); %>
                            </span>
                        </li>
                        <li>Code : <span><%= book.code %></span></li>
                        <li>Date de création : <span><%= new Date(book.createdAt).toLocaleDateString() %></span></li>
                        <% if (book.publishedDate) { %>
                            <li>Date de publication : <span><%= new Date(book.publishedDate).toLocaleDateString() %></span></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
