<section class="ftco-section ftco-no-pt">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Livres</span>
                <h2>Nouvelles sorties</h2>
            </div>
        </div>
        <div class="row">
            <% for (b of books.slice(0,6)) { %>
                <div class="col-md-6 col-lg-4 d-flex">
                    <div class="book-wrap d-lg-flex">
                        <% if (b.coverUrl) { %>
                            <div class="img d-flex justify-content-end" style="background-image: url(<%= b.coverUrl %>);">
                        <% } else { %>
                            <div class="img d-flex justify-content-end" style="background-image: url(images/book-4.jpg);">
                        <% } %>
                        </div>
                        <div class="text p-4 <% if (books.indexOf(b) > 2) { %>order-md-first<% } %>">
                            <h2>
                                <a href="/book/view/<%= b.slug %>">
                                    <%= b.title %>
                                </a>
                            </h2>
                            <span class="position">
                                <%= b.author.name %>
                            </span>
                            <p class="mb-2">
                                <% for (g of b.genres) { %>
                                    <span class="price">
                                        <%= g.name %>
                                        <% if (b.genres.indexOf(g) !== b.genres.length -1) { %>,<% } %>
                                    </span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>